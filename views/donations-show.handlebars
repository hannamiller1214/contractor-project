<!-- views/donations-show.handlebars -->

<div class="row mt-4">
  <div class="col-lg-6 offset-lg-3">

    <h3>{{donation.title}}</h3>
    <div class="lead">{{donation.desc}}</div>
  </div>
  <div class="text-right">
    <a href="/donations/{{donation.id}}/edit">Edit</a>
  </div>
  <div class="col-lg-4 offset-lg-1 mx-auto mt-5">
      <div class="d-flex justify-content-between">
          <b>Charity Endorsements ({{donation.Endorsements.length}})</b>
          <a href="/donations/{{donation.id}}/endorsements/new" class="btn btn-primary btn-sm">Endorse</a>
      </div>
      <div class="list-group mt-4">
        {{#each donation.Endorsements}}
          <div class="list-group-item clearfix">
            <div class="float-left">
              {{this.name}}
            </div>
            <div class="float-right">
              <form class="form-inline" action="/donations/{{../donation.id}}/endorsements/{{this.id}}?_method=DELETE" method="post">
                <button type="submit" class="btn btn-link btn-sm">Remove</button>
              </form>
            </div>
          </div>
        {{/each}}
      </div>
  </div>
</div>
