<!-- views/donations-edit.handlebars -->
<div class="row mt-4">
    <div class="col-lg-6 offset-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h3>Update Donation</h3>
                </div>
                <div class="card-text">
                    <form action="/donations/{{donation.id}}?_method=PUT" method="post">
                        {{> donations-form }}
                        <div class="text-right">
                            <a href="/donations/{{donation.id}}" class='text-muted mr-2'>Cancel</a>
                            <button type="submit" class="btn btn-primary" name="button">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
